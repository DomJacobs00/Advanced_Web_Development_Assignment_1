{% extends "./base.html.twig" %}

{% block title %}
    Add Movies
{% endblock %}
{% block body %}
    <div class="container">
        <div class="accordion" id="AddMovieAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                        Find Movie on The Open Movie Database
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <input type="text" class="form-control" id="movieName">
                        <button type="button" class="btn btn-primary" id="findMovieBtn" data-bs-toggle="modal" data-bs-target="#movieFindModal">Find</button>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Add The Movie Manually
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}

                        <button type="submit" class="submitBtn btn btn-primary ">Submit</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <div id="movieInfo"></div>
        <div class="modal fade" id="movieFindModal" tabindex="-1" aria-labelledby="movieFindModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="movieFindModalLabel"></h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary">Add Movie</button>
                    </div>
                </div>
            </div>
        </div>




    </div>
    {{ encore_entry_script_tags('findMovieOnOMDb') }}
{% endblock %}