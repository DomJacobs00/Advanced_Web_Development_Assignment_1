<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css')}}">
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <header>
        {# Navbar #}
        <nav class="navbar navbar-expand-lg navbar-light bg-light navigation-tab">
            <a class="navbar-brand" href="{{path('home')}}">
                <img src="{{ asset('build/images/Movie_Reviews_logo.562d9e79.png') }}" width="50" height="50" class="d-inline-block" alt="">
                Movie Reviews
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <!-- Flex container to center search bar and allow it to grow -->
                <div class="navbar-nav mx-auto w-100 justify-content-center">
                    <div class="nav-item w-50">
                        <input type="search" class="form-control rounded-pill navigationSearchCustom" placeholder="Search" aria-label="Search">
                    </div>
                </div>
                <!-- End of Flex container -->
                <div class="d-inline-flex p-2">
                    <div class="d-inline-flex p-2">
                        <a class="nav-link" href="{{ path('registration') }}">Sign up/ Login</a>
                    </div>
                </div>
            </div>
        </nav>


    </header>
    <body>
        {% block body %}

        {% endblock %}


    </body>

