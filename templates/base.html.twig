<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css')}}">
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <header>
        {# Navbar #}

            <nav class="navbar navbar-expand-lg navbar-light bg-light navigation-tab">
                <a class="navbar-brand" href="{{path('home')}}">
                    <img src="{{ asset('build/images/Movie_Reviews_logo.562d9e79.png') }}" width="50" height="50" class="d-inline-block" alt="">
                    Movie Reviews
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <!-- Flex container to center search bar and allow it to grow -->
                    <div class="navbar-nav mx-auto w-100 justify-content-center">
                        <div class="nav-item w-50">
                            <input type="search" id="search-box" class="form-control rounded-pill navigationSearchCustom" placeholder="Search" aria-label="Search">
                            <div id="search-results"></div>
                        </div>
                    </div>
                    <!-- End of Flex container -->

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="d-inline-flex p-2">
                            <div class="d-inline-flex p-2">
                                <div class="d-inline-flex p-2">
                                    <div class="btn-group">
                                        <a class="btn  dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <img src="{{ asset('build/images/myProfile.5845a7d5.png') }}" alt="myProfileLogo" class=" my-profile-logo-custom" >
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="{{ path('new_movie') }}">Add Movie</a></li>
                                            <li><a class="dropdown-item" href="#">Menu item</a></li>
                                            <li><a class="dropdown-item" href="{{ path('app_users') }}">Manage users</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Log Out</a></li>
                                        </ul>
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% elseif is_granted('ROLE_USER') %}
                        <div class="d-inline-flex p-2">
                            <div class="d-inline-flex p-2">
                                <div class="d-inline-flex p-2">
                                    <div class="btn-group">
                                        <a class="btn  dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <img src="{{ asset('build/images/myProfile.5845a7d5.png') }}" alt="myProfileLogo" class=" my-profile-logo-custom" >
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="{{ path('new_movie') }}">Add Movie</a></li>
                                            <li><a class="dropdown-item" href="#">Menu item</a></li>
                                            <li><a class="dropdown-item" href="#">Menu item</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Log Out</a></li>
                                        </ul>
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="d-inline-flex p-2">
                            <div class="dropdown-center">
                                <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Log in/Sign up
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('app_login') }}">Log in</a></li>
                                    <li><a class="dropdown-item" href="{{ path('registration') }}">Sign up</a></li>
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </nav>
    </header>
    <body>
        {% block body %}

        {% endblock %}


    </body>

