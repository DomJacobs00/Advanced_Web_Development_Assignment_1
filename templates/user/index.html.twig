{% extends 'base.html.twig' %}

{% block title %}Manage users{% endblock %}

{% block body %}

    <div class="container">
        <table class="table table-bordered table-striped custom-table">
            <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                        {{ role }}
                        {% endfor %}
                    </td>
                    <td><a href="#" class="btn btn-secondary">More</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
