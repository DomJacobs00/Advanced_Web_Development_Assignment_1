{% extends "base.html.twig" %}

{% block title %}
    Registration
{% endblock %}
{% block body %}
    <div class="container">
        {{ form_start(form, {'attr': {'class': 'my-form-class'}}) }}
        <div class="card">
            <div class="card-header">
                Register
            </div>
            <div class="card-body">
                {{ form_row(form.email) }}
                {{ form_row(form.password.first) }}
                {{ form_row(form.password.second) }}
                <div class="d-grid gap-2" style="padding-top: 2vh">
                    <button type="submit" class="btn btn-primary" >Register</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}