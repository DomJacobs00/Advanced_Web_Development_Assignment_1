{% extends "base.html.twig" %}

{% block title %}
    Home
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4 custom-card-spacing">
            {% for movie in movies %}
                <div class="col">
                    <div class="card h-100" style="width: 18rem;">
                        <img src="{{ movie.image }}" class="card-img-top custom-card-image" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ movie.title }}</h5>
                            <p class="card-text">{{ movie.shortDescription }}</p>
                            <a href="{{ path('movie', {'id': movie.id}) }}" class="btn btn-primary">Expand</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}